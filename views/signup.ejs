<%- include("partials/header.ejs") %>

    <div id="blog-welcome">
        <div class="">
            <div class="welcome-msg">
                <div class="login-form">
                    <h4 class="green-text vbold-text centered-text">Sign Up to share your thoughts</h4>
                    <hr class="large-bm">
                    <form action="/signup" method="post">
                        <div class="form-group vtiny-bm">
                            <label for="firstName" class="form-label green-text vbold-text xtiny-bm">First Name</label>
                            <input type="text" class="form-control regular-text" name="firstName" id="firstName" placeholder="Enter your first name" required>
                        </div>
                        <div class="form-group vtiny-bm">
                            <label for="lastName" class="form-label green-text vbold-text xtiny-bm">Last Name</label>
                            <input type="text" class="form-control regular-text" name="lastName" id="lastName" placeholder="Enter your surname" required>
                        </div>
                        <div class="form-group vtiny-bm">
                            <label for="email" class="form-label green-text vbold-text xtiny-bm">Email</label>
                            <input type="email" class="form-control regular-text" name="email" id="email" placeholder="Enter your email" required>
                        </div>
                        <div class="form-group large-bm">
                            <label for="password" class="form-label green-text vbold-text xtiny-bm">Password</label>
                            <input type="password" class="form-control regular-text" name="password" id="password" placeholder="Enter your password" required>
                        </div>
                        <hr class="large-bm">
                        <div class="d-grid login-button">
                            <button id="signup-submit" type="submit" class="button-green bg-dark white-text bold-text tiny-bm">Create your account</button>
                            <p class="bold-text">Already have an account? Click <a href="/login">here</a> to login.</p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="grid-cover">
            <div class="grid-cell"></div>
